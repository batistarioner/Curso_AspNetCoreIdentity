@using AspNetCoreIdentity.Extensions
@{
    ViewData["Title"] = "Segredo";
}
<h1>@ViewData["Title"]</h1>

<p>Segredo</p>

@{ 
    if(this.IfClaim("Produtos", "Ler"))
    {
        <p>Você só verá isso se tiver pemissão de Ler</p>
    }
}

<div>
    @Html.ActionLink("Secret", "Secret").IfClaimShow(Context, "Produtos", "Ler")
</div>

<div>
    <br/>
    <a href="#" class="btn btn-danger @Html.Raw(this.IfClaimShow("Produtos","Ler"))">Excluir</a>
</div>
